<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/grey_hard</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_very_hard</item>
        <item name="android:textColorPrimary">@color/grey_very_hard</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="CustomTabTextAppearance" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/grey_hard</item>
    </style>

    <style name="EditText.Accent" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/grey_very_hard</item>
    </style>

    <style name="ProgressBar.Primary" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FragmentAnimation" parent="@style/AppTheme">

    </style>

    <style name="AppTheme.FullScreenDialog">
        <item name="android:windowAnimationStyle">@style/Animation.WindowSlideUpDown</item>
    </style>

    <style name="Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_fragment_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fragment_out</item>
    </style>

</resources>
